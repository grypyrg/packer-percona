{
	"builders": [
		{
			"type": "virtualbox-iso",
			"boot_command": [
				"<esc>",
				"<wait>linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/anaconda-ks.cfg<enter>"
			],
			"boot_wait": "5s",
			"disk_size": 40000,
			"guest_os_type": "RedHat_64",
			"headless": true,
			"http_directory": "./http_directory",
			"iso_checksum": "99d305fa40ec9e28ef8450c3bcc45f85",
			"iso_checksum_type": "md5",
			"iso_urls": [
				"http://mirror.clarkson.edu/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1511.iso",
				"http://mirrors.xmission.com/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1511.iso",
				"http://repos.mia.quadranet.com/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1511.iso"
			],
			"output_directory": "/tmp/packer-virtualbox-x86_64",
			"shutdown_command": "shutdown -P now",
			"ssh_password": "vagrant",
			"ssh_username": "root",
			"ssh_timeout": "20m",
			"guest_additions_sha256": "2a87971ae3c7e57e87713967a6f242acbdafcc09b635cba98e6dd3a7f5292d3b"
		},
		{
			"type": "vmware-iso",	 
			"boot_command": [
				"<esc>",
				"<wait>linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/anaconda-ks.cfg<enter>"
			],
			"boot_wait": "5s",
			"disk_size": 40000,
			"guest_os_type": "linux",
			"headless": true,
			"http_directory": "./http_directory",
			"iso_checksum": "99d305fa40ec9e28ef8450c3bcc45f85",
			"iso_checksum_type": "md5",
			"iso_urls": [
				"http://mirror.clarkson.edu/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1511.iso",
				"http://mirrors.xmission.com/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1511.iso",
				"http://repos.mia.quadranet.com/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1511.iso"
			],
			"output_directory": "/tmp/packer-vmware",
			"shutdown_command": "shutdown -P now",
			"ssh_password": "vagrant",
			"ssh_username": "root",
			"ssh_timeout": "20m",
			"tools_upload_flavor": "linux"
		},
		{
			"type": "amazon-ebs",
			"ami_name": "centos-7-64_percona {{timestamp}}",
			"ami_regions": [
				"us-west-1",
				"eu-west-1"
			],
			"instance_type": "t2.micro",
			"region": "us-east-1", 
			"source_ami": "ami-1609da7e",
			"subnet_id": "subnet-896602d0",
			"vpc_id": "vpc-cacef8af",
			"associate_public_ip_address": "true",
			"ami_virtualization_type": "hvm",
			"ssh_timeout": "5m",
			"ssh_pty": "true",
			"ssh_username": "centos",
			"ami_groups": [ "all" ],
			"ami_block_device_mappings": [
				{
					"device_name": "/dev/sda1",
					"delete_on_termination": true
				}
			]
		}
	],
	"provisioners": [
		{
			"script": "provisioners/base.sh",
			"type": "shell",
			"override": {
				"amazon-ebs": {
					"execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'"
				}
			}
		},
		{
			"script": "provisioners/vm.sh",
			"type": "shell",
			"only": ["virtualbox-iso", "vmware-iso"]
		},
		{
			"script": "provisioners/cloud.sh",
			"type": "shell",
			"execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
			"only": ["amazon-ebs"]
		}
	],
	"post-processors": [[
		{
			"type": "vagrant",
			"output": "boxes/centos-7-64_percona_{{.Provider}}.box"
		},
		{
			"type": "atlas",
			"artifact": "grypyrg/centos-x86_64",
			"artifact_type": "vagrant.box",
			"only": ["virtualbox-iso"],
			"metadata": {
				"provider": "virtualbox",
				"version": "7.2.{{isotime \"20060102\"}}"
			}
		},
		{
			"type": "atlas",
			"artifact": "grypyrg/centos-x86_64",
			"artifact_type": "vagrant.box",
			"only": ["vmware-iso"],
			"metadata": {
				"provider": "vmware_desktop",
				"version": "7.2.{{isotime \"20060102\"}}"
			}
		},
		{
			"type": "atlas",
			"artifact": "grypyrg/centos-x86_64",
			"artifact_type": "vagrant.box",
			"only": ["amazon-ebs"],
			"metadata": {
				"provider": "aws",
				"version": "7.2.{{isotime \"20060102\"}}"
			}
		}
	]]
}

